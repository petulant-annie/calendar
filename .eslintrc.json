{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "eqeqeq": 0,
    "curly": 2,
    "quotes": [ 2, "single" ],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-console": "error"
  }
}
